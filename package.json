{
  "name": "quest-game",
  "private": true,
  "packageManager": "npm@9.4.1",
  "workspaces": [
    "shared",
    "client",
    "server"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "dev:server": "turbo run dev --filter=server",
