{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": ".",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/shared/*": ["shared/*"],
      "@/server/*": ["server/*"],
      "@/client/*": ["client/*"]
    }
  },
  "include": ["**/*.ts"]
}
