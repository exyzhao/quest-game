{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/shared/*": ["packages/shared/*"],
      "@/server/*": ["server/*"],
      "@/client/*": ["client/*"]
    }
  },
  "include": ["server/**/*.ts", "client/**/*.ts", "shared/**/*.ts"],

  // If you want to exclude node_modules, tests, etc.:
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
